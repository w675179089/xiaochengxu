<view class='main'>
  <view class='form-box'>
    <form bindsubmit='formSubmit' id='forms'>
      <view class='border'>
        <label for='name'><text>姓名：</text></label>
        <input placeholder='请填写姓名' id='name' value='{{datas.name}}' name='name'></input>
      </view>
      <view  class='border'>
        <label for='tel'><text>电话：</text></label>
        <input placeholder='请填写电话' id='tel' value='{{datas.tel}}' type='number' name='tel'></input>
      </view>
      <view class='border'>
        <label for='address'><text>住址：</text></label>
        <input placeholder='请填写住址' id='address' value='{{datas.address}}' name='address'></input>
      </view>
      <view class='msg'>{{msg}}</view>
      <button form-type ='submit'>提交</button>
    </form>
  </view>
</view>