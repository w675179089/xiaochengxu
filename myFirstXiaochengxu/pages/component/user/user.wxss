@import '../../common/common.wxss';
.user-header{
  position:relative;
height:160rpx;
line-height:100rpx;
padding:30rpx 30rpx 30rpx 150rpx;
box-sizing:border-box;
background:#AB956D;
font-size:28rpx;
color:#fff;
}
.user-header .img-box{
  position:absolute;
left:30rpx;
top:30rpx;
width:100rpx;
height:100rpx;

}
.img-box image{
  border-radius:50%;
  width: 100%;
  height: 100%;
  vertical-align: middle;
}
.edit-img{
  text-align: center;
  position:absolute;
left:0rpx;
top:100rpx;
 height: 30rpx; 
/* color:; */
font-size: 20rpx;
display: inline-block;
width: 100%;
line-height: 30rpx;
}
.about{
  float: right;
}
.address-box{
  border-bottom:20rpx solid #ededed;
color:#999;
line-height:90rpx;
font-size:28rpx
}
.address-title{
  text-align: center;
  position:relative;
height:90rpx;
border-bottom:1rpx solid #e9e9e9;
}
.address-box .address-title::after{
    position: absolute;
    right: 30rpx;
    top: 34rpx;
    content: '';
    width: 16rpx;
    height: 16rpx;
    border-top: 4rpx solid #7f7f7f;
    border-right: 4rpx solid #7f7f7f;
    -webkit-transform: rotate(45deg);
    transform: rotate(45deg);
}
.address-list{
  padding-left: 30rpx;
}
.address-list view{
  height:90rpx;
border-bottom:1rpx solid #e9e9e9;

}
.order-box{
  color:#999;
font-size:28rpx
}
.order-title{
  height:90rpx;
line-height:90rpx;
border-bottom:1rpx solid #e9e9e9;
text-align:center;
}
.order-list{
  padding-left:30rpx;
border-bottom:20rpx solid #ededed;
}
.order-list:last-child{
  border-bottom: 0;
}
.order-num{
  height:90rpx;
line-height:90rpx;
border-bottom:1rpx solid #e9e9e9;

}
.order-details{
  position:relative;
height:120rpx;
padding:35rpx 20rpx 35rpx 170rpx;
border-bottom:1rpx solid #e9e9e9;

}
.order-details image{
  position:absolute;
left:0;
top:20rpx;
width:150rpx;
height:150rpx;

}
.order-shop-name,.order-shop-num{
  line-height: 60rpx;
}
.orders-status{
  position:absolute;
right:20rpx;
top:35rpx;
height:60rpx;
line-height:60rpx;
color:#b42f2d;
}
.send-status{
  position:absolute;
right:20rpx;
top:95rpx;
height:60rpx;
line-height:60rpx;
color:#b42f2d;
}
.setting-address{
  text-align: center;
}
.userName{
  width: 40%;
  float: left;
}
.noorders{
  text-align: center;
  width: 100%;
  height: 400rpx;
  font-size: 50rpx;
  font-weight: 600;
  /* line-height: 400rpx; */
}
.noorders image{
  width: 174rpx;
  height: 162rpx;
  display: block;
  margin: 100rpx auto;
}
.no-text{
  height: 100rpx;
  line-height: 100rpx;
}