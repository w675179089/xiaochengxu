@import '../../common/common.wxss';
.cart-box{
  padding-bottom:100rpx;

}
.cart-list{
position:relative;
padding:20rpx 20rpx 20rpx 285rpx;
height:185rpx;
border-bottom:1rpx solid #e9e9e9;
}
.cart-select{
  position:absolute;
left:20rpx;
top:90rpx;
width:45rpx;
height:45rpx;
}
.cart-image{
  position:absolute;
top:20rpx;
left:85rpx;
width:185rpx;
height:185rpx;
}
.shop-name{
  display:inline-block;
width:300rpx;
height:105rpx;
line-height:50rpx;
overflow:hidden;

}
.shop-price{
  display:inline-block;
  float:right;
  height:105rpx;
  line-height:50rpx;

}
.cart-count{
  position:absolute;
left:285;
bottom:20rpx;
width:250rpx;
height:80rpx;
}
.cart-count text{
  display:inline-block;
line-height:80rpx;
text-align:center;
}
.add,.jian{
  font-size:44rpx;
width:50rpx;
height:100%;
}
.number{
  width:150rpx;

}
.del{
  position:absolute;
right:20rpx;
bottom:20rpx;
width:80rpx;
height:80rpx;
line-height:80rpx;
text-align:center;
font-size:44rpx;
}
.cart-footer{
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  background-color: #ab956d;
  position: fixed;
  bottom: 0;
  color: #fff;
  padding: 0 47rpx 0 23rpx;
  font-size: 30rpx;
  box-sizing: border-box;
}
.cart-footer icon{
  width: 46rpx;
  height: 46rpx;
  display: inline-block;
  position: absolute;
  top: 50%;
  margin-top: -23rpx;
}
.go-order{
  /* width: 100%; */
  height: 100%;
  float: right;
}
.total-price{
  margin-right: 50rpx;
}
.go-order navigator{
  display: inline-block;
}
.go-order image{
  width: 45rpx;
  height: 45rpx;
  vertical-align: middle;
}
.noshop{
  padding-top: 110rpx;
  text-align: center;
  /* background: url('/image/gouwuche.png') */
}
.noshop image{
    width: 330rpx;
    height: 390rpx;
    margin: 112rpx auto 0;
    display: block;
}
.noshop-text{
  margin-top: 38rpx;
     font-size: 45rpx; 
    color: #959595;
    font-weight: 600;
    text-align: center;
}
.guang{
    color: #fff;
    display: block;
    margin: 60rpx auto 0;
    width: 220rpx;
    height: 74rpx;
    background: #AB956D;
    line-height: 74rpx;
    font-size: 40rpx;
    border-radius: 2px;
    font-weight: 700;
}
