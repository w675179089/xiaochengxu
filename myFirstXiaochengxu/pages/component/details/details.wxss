@import '../../common/common.wxss';
.details-box{
  padding: 40rpx 50rpx;
  position: relative;
  text-align: center;
  color:#454552;
  border-bottom: 30rpx solid #ededed;
}
.details-image{
  width:300rpx;
height:300rpx;
margin:35rpx 0 125rpx;
}
.details-option{
  width: 100%;
  height: 100rpx;
  background-color: #AB956D;
  border-radius: 50rpx;
  line-height: 100rpx;
  padding: 0 50rpx;
  margin-bottom: 60rpx;
  font-size: 28rpx;
  color:white;
  box-sizing: border-box;
  position: relative;
}
.details-option text{
 display: inline-block;
}
.details-num{
  width: 160rpx;
  height: 100%;
}
.details-incre,.details-add{
  width: 80rpx;
  margin-right: 7rpx;
}
.add-cart{
  width: 210rpx;
}
.details-option image{
  width: 45rpx;
  height: 45rpx;
  position: absolute;
  top:50%;
  margin-top: -23rpx;
  right:25rpx;
}
.has-details{
  font-size: 28rpx;
  margin-bottom: 20rpx;
}
.details-title,details-price{
  font-size: 40rpx;
}
.details-title{
  margin-bottom: 30rpx;
}
.nav-item{
  display:inline-block;
width:33.33%;
height:90rpx;
line-height:90rpx;
border-bottom:1rpx solid #ededed;
box-sizing:border-box;
text-align:center;
color:#c7c7cb;    
}
.nav-item.on {
color:#bcaa8a;
border-bottom:5rpx solid #bcaa8a;
}
.nav-con{
  padding: 40rpx;
}
.addCaer-icon{
  position: absolute;
    right: 70rpx;
    top: 70rpx;
    width: 10rpx;
    height: 10rpx;
    border-radius: 50%;
    opacity: .6;
     -webkit-animation: addCart .3s ease-out; 
     animation: addCart .3s ease-out; 
}
@-webkit-keyframes addCart {
  0%{
        right:100rpx;
        top:530rpx;
        -webkit-transform: scale(6);
    }
}
@keyframes  addCart {
  0%{
        right:100rpx;
        top:530rpx;
        -webkit-transform: scale(6);
    }
}
.carts-box{
  position:absolute;
right:40rpx;
top:40rpx;
width:75rpx;
height:75rpx;
}
.carts-box.on{
  -webkit-animation: scaleCart 0.3s ease;
  animation: scaleCart 0.3s ease;
}
@-webkit-keyframes scaleCart {
  50%{
    -webkit-transform: scale(2)
  }
}
@keyframes scaleCart {
  50%{
    transform: scale(2)
  }
}
.carts-box image,.carts-box view{width:100%;height:100%}
.icon-num{
  position:absolute;
left:-15rpx;
width:40rpx;
height:40rpx;
line-height:40rpx;
border-radius:50%;
background:#AB956D;
color:#fff;
font-size:24rpx;
}